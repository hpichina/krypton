<div class="head">
  <h3>
  <i class="icon-basket"></i>
  <span>{{ label }}</span>
  </h3>
</div>
<ul class="row image-list product-list">
  {% for row in content["view_build"]["#rows"][0]["#rows"] %}
    {% if loop.index0 % 4 == 0 and loop.index0 != 0 %}
      </ul>
      <ul class="row image-list product-list">
    {% endif %}
    <li class="col-md-3 col-sm-6 col-xs-12">
      {{ row }}
    </li>
  {% endfor %}
</ul>
{% if content["view_build"]["#rows"][0]["#rows"] | length >= 12 %}
  <div class="text-center">
    <a class="btn btn-primary btn-lg" href="/products">查看更多</a>
  </div>
{% endif %}
