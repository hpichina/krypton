<section class="hero-banner" style="background-image: url('{{ file_url(node.field_page_banner_image.0.entity.uri.value) }}');">
  <div class="container">
    {% if node.title.0.value | length < 30 %}
        <h1>{{ node.title.0.value }}</h1>
    {% elseif node.title.0.value | length < 40 %}
        <h2>{{ node.title.0.value }}</h2>
    {% elseif node.title.0.value | length < 50 %}
        <h3>{{ node.title.0.value }}</h3>
    {% elseif node.title.0.value | length < 60 %}
        <h4>{{ node.title.0.value }}</h4>
    {% else %}
        <p>{{ node.title.0.value }}</p>
    {% endif %}
    <small>
        <i class="icon-location"></i>
        <span>{{ node.field_coop_address.0.value }}</span>
    </small>
  </div>
</section>

<section>
    <div class="container page-block">
        <div class="page-nav text-center">
            <div class="ul list-inline">
                <li><a href="#product">农产品</a></li>
                <li><a href="#detail">合作社介绍</a></li>
                <li><a href="#contact">联系方式</a></li>
            </div>
        </div>
        <div id="product" class="container detail-block">
            <h3 class="with-line">
                <i class="icon-star-filled"></i>
                <span>农产品</span>
            </h3>
            <ul class="row image-list product-list">
                {{ products_in_coops[node.nid.0.value] }}
            </ul>
            <p class="text-center">
                <a href="/products/overview" class="btn btn-primary btn-lg">查看更多</a>
            </p>
        </div>
        <div id="detail" class="detail-block">
            {{ content.body }}
        </div>
        <div id="contact" class="detail-block">
            {{ content.field_coop_contact }}
        </div>
    </div>
</section>

<script>
    $(function() {
        highlight('coops', location.search)
    });
</script>
