{% extends "page.html.twig" %}

{% block content %}
    <style>
        .tabs {
            display: none;
        }
        .description {
            display: none;
        }
        .user-login-form .form-item {
            margin-bottom: 20px;
        }
        .user-login-form .form-item input {
            color: black;
        }
        #edit-submit {
            margin-left: 100px;
            color: #333333;
